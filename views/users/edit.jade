//- views/users/edit
extends ../layouts/layout

block content
	.col-sm-6.col-sm-offset-4
		h1
			span.fa.fa-sign-in
			| Edit Profile
		include ../layouts/flash

		//- Edit Profile form
		form(action='/profile/edit' method='POST')
			input(type="hidden", name="userId", id="userId", value=user.id).form-control
			.form-group
				label User Name
				input.form-control(disabled= true, type='text', name='name', value= user.name)
			.form-group
				label Email
				input.form-control(disabled= true, type='text', name='email', value= user.email)
			.form-group
				label Old Password
				input.form-control(type='password', placeholder='Enter Your Old Password', name='oldPassword')
			.form-group
				label New Password
				input.form-control(type='password', placeholder='Enter Your New Password', name='newPassword')
			.form-group
				label Biography
				textarea.form-control(rows=15, name='bio')= user.bio
			a(href='/profile').btn.btn-primary Back
			button.btn.btn-success.pull-right(type='submit') Submit
			hr